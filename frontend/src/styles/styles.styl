@import './mixins'
@import './cube'
@import './ui'

html, body
    width 100%
    height 100%

body
    margin 0
    overflow hidden
    display flex
    justify-content center
    flex-direction column
    align-items center
    color #040408

body, button
    font-family Roboto Slab

*
    box-sizing border-box

.container
    fit()
    height calc(100% - 80px)
    perspective 1000px
    transform-style preserve-3d
    transform rotateX(-45deg)
    position relative
    z-index 5

.car-container
    block-size()
    position relative
    margin 200px auto
    transform-style preserve-3d
    position absolute
    bottom 0
    left 0
    right 0

.controls
    display flex
    justify-content space-around
    height 100%
    user-select none

.control
    display flex
    align-items center
    justify-content center
    flex 1
    height 100%
    padding 10px 40px

.arrow
    width 30px
    height 30px
    transform-origin bottom left
    &:before
        line()
    &:after
        line(true)
    &.left
        transform rotate(135deg) translate(-50%, 20%)
    &.right
        transform rotate(-45deg) translate(100%, 30%)