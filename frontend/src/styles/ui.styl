@import './mixins'

.ui
    fit()
    position absolute
    width 100%
    height 100%
    display flex
    flex-direction column
    z-index 10
    background linear-gradient(to bottom, rgba(255, 255, 255, 1) 10%, rgba(255, 255, 255, 0) 40%)
    transform: translateZ(1000px);
    &:not(.playing)
        background rgba(255, 255, 255, .8)
    
.content
    display flex
    flex-direction column
    justify-content center
    align-items center
    .ui.playing &
        visibility hidden

.message
    display none
    font-size 2rem
    margin-bottom 80px
    .ui.lost &
        display block

button
    border none
    height 60px
    display flex
    border-radius 30px
    align-items center
    justify-content center
    font-size 1.5rem
    background linear-gradient(#0229F6, #01239C) 
    color white
    +below(500px)
        padding 0px 60px
    +above(501px)
        padding 0px 100px

.bar
    height 80px

.top
    display flex

.score-container
    flex 1
    margin 0
    display flex
    align-items center
    justify-content center
    font-size 1.2rem

.score
    font-weight bold
    color var(--main-color)

.content
    flex 1