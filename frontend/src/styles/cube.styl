@import './mixins'

block-size()
    +below(330px)
        width 30px
        height 30px
    +above(331px)
        width 50px
        height 50px

apply-transforms(halfwidth)
    .front
        transform rotateY(0deg) translateZ(halfwidth)

    .back
        transform rotateY(180deg) translateZ(halfwidth)

    .left
        transform rotateY(90deg) translateZ(halfwidth)

    .bottom
        transform rotateX(-90deg) translateZ(halfwidth)

    .right
        transform rotateY(-90deg) translateZ(halfwidth)

    .top
        transform rotateX(90deg) translateZ(halfwidth)


.cube
    width 100%
    height 100%
    position absolute
    transform-style preserve-3d

.cube figure
    margin 0
    width 100%
    height 100%
    display block
    background var(--cube-secondary-color)
    position absolute
    box-sizing border-box

.cube
    .top
        background var(--cube-main-color) !important
    +below(330px)
        apply-transforms(15px)
    +above(331px)
        apply-transforms(25px)

@keyframes rotate
    from
        opacity 0
    to
        opacity 1