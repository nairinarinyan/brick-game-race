.cube
    width 100%
    height 100%
    position absolute
    transform-style preserve-3d

.cube figure
    margin 0
    width 100%
    height 100%
    display block
    background rgba(126, 127, 154, .2)
    position absolute
    box-sizing border-box

.cube
    .front
        transform rotateY(0deg) translateZ(25px)

    .back
        transform rotateY(180deg) translateZ(25px)

    .left
        transform rotateY(90deg) translateZ(25px)

    .bottom
        transform rotateX(-90deg) translateZ(25px)

    .right
        transform rotateY(-90deg) translateZ(25px)

    .top
        background #0229F6 !important
        transform rotateX(90deg) translateZ(25px)

@keyframes rotate
    from
        opacity 0
    to
        opacity 1